{
	"name": "@vahor/nestjs-zod-monorepo",
	"version": "0.0.0",
	"description": "Use Zod to validate your Nestjs routes and add openapi documentation",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Vahor/nestjs-zod.git"
	},
	"workspaces": {
		"packages": [
			"lib",
			"example"
		],
		"catalog": {
			"tsdown": "^0.15.11",
			"typescript": "^5.9.3"
		}
	},
	"private": false,
	"author": {
		"email": "me@vahor.fr"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.1",
		"@changesets/changelog-github": "^0.5.1",
		"@changesets/cli": "^2.29.5",
		"@types/bun": "^1.3.1",
		"tsdown": "^0.15.11",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.6",
		"pkg-pr-new": "^0.0.60",
		"typescript": "^5.9.3"
	},
	"scripts": {
		"prepare": "husky",
		"build": "bun run --filter '@vahor/nestjs-zod' build",
		"typecheck": "bun run --filter '@vahor/nestjs-zod' typecheck",
		"format": "bunx @biomejs/biome check ./ --write",
		"ci:version": "bunx @changesets/cli version && bun update",
		"ci:publish": "for dir in packages/*; do (cd \"$dir\" && bun run build && bun publish || true); done && changeset tag",
	"lint-staged": {
		"*": [
			"biome check --no-errors-on-unmatched --files-ignore-unknown=true"
		]
	},
	"publishConfig": {
		"access": "public"
	},
	"engines": {
		"bun": ">=1.3.0"
	}
}
